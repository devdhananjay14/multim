{
  "device": "cuda:3",
  "dataset_type": "confusion",
  "network_type": "rnn",
  "num_seeds": 1,
  "base_seed": 1,
  "train": {
    "epochs": 100,
    "optimizer": "Adam",
    "criterion": "CrossEntropyLoss",
    "batch_size": 256,
    "early_stopping": {
      "patience": 50,
      "log_every": 1,
      "evaluate_every": 1,
      "metrics": "auc",
      "metrics_trend": "increasing"
    },
    "learning_rate": {
      "initial_value": 3e-5,
      "decay_ratio": 0.5,
      "decay_patience": 100,
      "max_decreases": 3
    }
  }
}