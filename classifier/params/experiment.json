{
  "id": "",
  "device": "cuda:3",
  "dataset_type": "confusion",
  "network_type": "rnn",
  "num_seeds": 1,
  "base_seed": 1,
  "training": {
    "epochs": 100,
    "optimizer": "AdamW",
    "criterion": "CrossEntropyLoss",
    "clip_gradient": true,
    "batch_size": 128,
    "early_stopping": {
      "active": true,
      "patience": 50,
      "log_every": 10,
      "evaluate_every": 1,
      "metrics": "auc",
      "metrics_trend": "increasing"
    },
    "learning_rate": {
      "initial_value": 1e-5,
      "decay_ratio": 0.5,
      "decay_patience": 100,
      "max_decreases": 3,
      "reload_best_on_decay": true
    }
  }
}